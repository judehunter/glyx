{
  "name": "glyx",
  "version": "0.1.1",
  "repository": "https://github.com/judehunter/glyx",
  "author": "judehunter <matisowagm@gmail.com>",
  "license": "MIT",
  "keywords": [
    "state manager",
    "react",
    "preact",
    "svelte",
    "atomic",
    "state",
    "declarative"
  ],
  "scripts": {
    "test": "jest",
    "build": "tsc"
  },
  "sideEffects": false,
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "engines": {
    "node": "^12.0.0 || ^14.0.0 || >=16.0.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.2",
    "jest": "^27.0.4",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.2"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "globals": {
      "ts-jest": {
        "useESM": true
      }
    },
    "testEnvironment": "jsdom",
    "coverageThreshold": {
      "global": {
        "statements": 100
      }
    },
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ]
  },
  "prettier": {
    "arrowParens": "always",
    "quoteProps": "consistent",
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120,
    "bracketSpacing": false
  }
}
