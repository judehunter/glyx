{
  "compilerOptions": {
    "target": "es2018",
    "lib": [
      "es2019",
      "es5",
      "es6",
      "dom",
      "dom.iterable"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "declaration": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.*"
  ],
}