{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022", "es5", "es6", "dom", "dom.iterable"],
    "allowJs": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "strict": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "exactOptionalPropertyTypes": true,
    "jsx": "preserve",
    "outDir": "./dist"
  },
  "include": ["src", "test", "vitest.config.js"]
}
